@model AboutViewModel

@{
    ViewData["Title"] = "Edit";
}

<div style="padding:120px">
    <br />
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Editer un Resume</h2>
    <!-- Icon Divider -->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon">
            <i class="fas fa-star"></i>
        </div>
        <div class="divider-custom-line"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstResume" class="control-label"></label>
                    <textarea asp-for="FirstResume" class="form-control" ></textarea>
                    <span asp-validation-for="FirstResume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondResume" class="control-label"></label>
                    <textarea asp-for="SecondResume" class="form-control" ></textarea>
                    <span asp-validation-for="SecondResume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PdfFile" class="control-label">File</label>
                    <input type="file" asp-for="PdfFile" class="form-control" />
                    <span asp-validation-for="PdfFile" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="PdfUrl" class="form-control"/>
                <input type="hidden" asp-for="Id" />
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

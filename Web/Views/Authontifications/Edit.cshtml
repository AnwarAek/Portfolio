@model Core.Entities.Authontification

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<section id="Login">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Edit password</h2>
                                <p class="text-white-50 mb-5">Please enter your New Password !</p>
                                @if (ViewBag.Message != null)
                                {
                                    <h5 class="alert alert-danger">@ViewBag.Message</h5>
                                }

                                <div class="form-group form-white mb-4">
                                    <input asp-for="Password" type="password" id="typeEmailX" class="form-control form-control-lg" placeholder="Enter your Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="UserName" value="anwaraek"/>
                                <input type="hidden" asp-for="PassPhrase" value="freelancer"/>
                                <div class="" form-group>
                                    <input type="submit" value="Login" class="btn btn-outline-light btn-lg px-5" />
                                </div>

                            </div>

                            <div>
                                <p class="mb-0">Don't have an account? <a href="#!" class="text-white-50 fw-bold">Sign Up</a></p>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_Validation" />
}